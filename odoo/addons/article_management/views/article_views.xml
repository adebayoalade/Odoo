<odoo>
    <record id="view_library_article_tree" model="ir.ui.view">
        <field name="name">library.article.tree</field>
        <field name="model">library.article</field>
        <field name="arch" type="xml">
            <tree>
                <field name="title"/>
                <field name="author_id"/>
                <field name="publish_date"/>
                <field name="deadline"/>
                <field name="assigned_to_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <record id="view_library_article_form" model="ir.ui.view">
        <field name="name">library.article.form</field>
        <field name="model">library.article</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="image" widget="image"/>
                        <field name="title"/>
                        <field name="author_id"/>
                        <field name="publish_date"/>
                        <field name="start_date"/>
                        <field name="finished_date"/>
                        <field name="deadline"/>
                        <field name="assigned_to_id"/>
                        <field name="content"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_library_article_kanban" model="ir.ui.view">
        <field name="name">library.article.kanban</field>
        <field name="model">library.article</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="title"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <strong>
                                <field name="title"/>
                            </strong>
                            <div>
                                <field name="author_id"/>
                            </div>
                            <div>
                                <field name="state"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
