<odoo>
    <!-- Tree View -->
    <record id="view_article_tree" model="ir.ui.view">
        <field name="name">article.management.tree</field>
        <field name="model">article.management</field>
        <field name="arch" type="xml">
            <tree>
                <field name="title"/>
                <field name="author_id"/>
                <field name="publish_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_article_form" model="ir.ui.view">
        <field name="name">article.management.form</field>
        <field name="model">article.management</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="image"/>
                        <field name="title"/>
                        <field name="author_id"/>
                        <field name="publish_date"/>
                        <field name="start_date"/>
                        <field name="finished_date"/>
                        <field name="deadline"/>
                        <field name="assigned_to_id"/>
                        <field name="content"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_article_kanban" model="ir.ui.view">
        <field name="name">article.management.kanban</field>
        <field name="model">article.management</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong><field name="title"/></strong>
                                <div class="oe_kanban_description">
                                    <field name="author_id"/>
                                    <field name="publish_date"/>
                                </div>
                                <div class="oe_kanban_state">
                                    <field name="state"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
