<odoo>
    <record id="group_library_article_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>
    
    <record id="group_library_article_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="library_article_rule_user" model="ir.rule">
        <field name="name">User article rule</field>
        <field name="model_id" ref="model_library_article"/>
        <field name="groups" eval="[(4, ref('group_library_article_user'))]"/>
        <field name="domain_force">[('assigned_to_id', '=', user.partner_id.id)]</field>
    </record>
    
    <record id="library_article_rule_manager" model="ir.rule">
        <field name="name">Manager article rule</field>
        <field name="model_id" ref="model_library_article"/>
        <field name="groups" eval="[(4, ref('group_library_article_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
</odoo>
